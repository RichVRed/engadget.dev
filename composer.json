{
    "name": "App",
    "description": "The Engadget Blog",
    "keywords": ["engadget", "blog", "laravel"],
    "license": "proprietary",
    "authors": [
        {
            "name": "Richard Vannauker",
            "email": "richard.vannauker@directenergy.com"
        }
    ],
    "minimum-stability": "stable",
    "type": "project",
    "require": {
        "arcanedev/no-captcha": "^3.2",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0",
        "laravelcollective/html": "5.4.*",
        "php": ">=5.6.4",
        "webpatser/laravel-countries": "1.5.*"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "bin-dir": "vendor/bin",
        "preferred-install": "dist",
        "sort-packages": true
    }
}
